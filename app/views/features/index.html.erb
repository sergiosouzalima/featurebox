<div class="row">
  <div class="span10 offset1">
    <div class="form-new-feature">
      <h2 id="action-mode">Feature</h2>
      <div id="feature-form">
        <%= render "form" %>
      </div>
    </div>
    <h1>Features</h1>
    <table id="feature-table" class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @features.each do |feature| %>
          <%= render feature %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
