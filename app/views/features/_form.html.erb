<%= simple_form_for(@feature, remote: true) do |f| %>

  <div id="feature-message">
    <ul></ul>
  </div>

  <div class="form-inputs">
    <%= f.input :name, autofocus: true %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, value: "Save" %>
    <%= link_to 'New', new_feature_path, remote: true, class: "btn btn-default" %>
  </div>
<% end %>
